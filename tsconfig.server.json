{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist/server",
    "rootDir": ".",
    "lib": ["ES2022"]
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}
